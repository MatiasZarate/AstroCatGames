    <input type="number" placeholder="edad" name="edad" id="edad" class="input" value="<%= locals.old && old.edad %>"><br><br>
    <input type="file" placeholder="foto de perfil" name="imagen" id="imagen" class="input"><br><br>
    <button type="submit" class="buto">crear cuenta</button></form>  
</div> 
    
    
   
 </div><br><%- include("../partials/footer") %>
