<body class="body"><div class="extra1"> 
         <%- include("../partials/header") %>
         
    <div class="body2"><div class="cajaBorrar"> 
    <h1>Registro</h1>
     <% if (locals.errors) { locals.errors.forEach(error=> { %>
                    <p>
                        <%= error.msg %>
                    </p>
                    <% }) } %>

     <div class="errores">
    <ul></ul></div> 
    <br><form action="/usuarios/registro" method="POST"  id="formularioRegistro" class="formularioRegistro" enctype="multipart/form-data">
